<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.xxiang1_sizebook.ViewPerson">

    <!-- Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:text="Name"
            style="@style/CategoryStyle"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Name Input -->
            <TextView
                android:id="@+id/show_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>


    <!-- Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="Date"
            style="@style/CategoryStyle" />


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Date Input -->
            <TextView
                android:id="@+id/show_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>

    <!-- Neck -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="Neck"
            style="@style/CategoryStyle" />


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Input Neck -->

            <!-- Units(inches) -->
            <TextView
                android:text="inches"
                style="@style/UnitsStyle"/>

            <TextView
                android:id="@+id/show_neck"
                style="@style/FieldStyle"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Bust -->
    <LinearLayout
        android:id="@+id/bust_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Bust"
            style="@style/CategoryStyle" />


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Bust Input -->
            <TextView
                android:id="@+id/show_bust"
                style="@style/FieldStyle" />

            <!-- Units (inches) -->
            <TextView
                android:text="inches"
                style="@style/UnitsStyle"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Chest -->
    <LinearLayout
        android:id="@+id/chest_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="Chest"
            style="@style/CategoryStyle" />


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Chest Input -->
            <TextView
                android:id="@+id/show_chest"
                style="@style/FieldStyle" />

            <!-- Units (Inches) -->
            <TextView
                android:text="inches"
                style="@style/UnitsStyle"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Waist -->
    <LinearLayout
        android:id="@+id/waist_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Waist"
            style="@style/CategoryStyle" />


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Waist Input -->
            <TextView
                android:id="@+id/show_waist"
                style="@style/FieldStyle" />

            <!-- Units (inches) -->
            <TextView
                android:text="inches"
                style="@style/UnitsStyle"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Hip -->
    <LinearLayout
        android:id="@+id/hip_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Hip"
            style="@style/CategoryStyle" />


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Hip Input  -->
            <TextView
                android:id="@+id/show_hip"
                style="@style/FieldStyle" />

            <!-- Units (inches) -->
            <TextView
                android:text="inches"
                style="@style/UnitsStyle"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Inseam -->
    <LinearLayout
        android:id="@+id/inseam_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Inseam"
            style="@style/CategoryStyle" />


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp">

            <!-- Inseam Input -->
            <TextView
                android:id="@+id/show_inseam"
                style="@style/FieldStyle" />

            <!-- Units (inches) -->
            <TextView
                android:text="inches"
                style="@style/UnitsStyle"/>
        </RelativeLayout>
    </LinearLayout>

    <!-- Comment -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="Comment"
            style="@style/CategoryStyle" />


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <!-- Comment Input -->
            <TextView
                android:id="@+id/show_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>